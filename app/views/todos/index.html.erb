<title>Shared Todo App</title>

<div class="container">

<div class="row">

<div class="col-lg-12">

<h1>Get Stuff Done</h1>

<hr>

<%= form_for @new_todo, :url => { :action => "add", :controller => "todos" } do |f| %>

<div class="row">
  <div class="col-lg-6">
    <div class="input-group">
      <%= f.text_field :todo_item, class: "form-control", placeholder: "Get this done..." %>
      <span class="input-group-btn">
        <%= f.submit "Add To Do", class: "btn btn-primary" %>
      </span>
    </div><!-- /input-group -->
  </div><!-- /.col-lg-6 -->
</div><!-- /.row -->

<% end %>

<% if !flash[:error].nil? %>

  <div class="alert alert-danger">

    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>

    <%= flash[:error] %>

  </div>

<% end %>

<% if flash[:success] %>

  <div class="alert alert-success">

    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>

    <%= flash[:success] %>

  </div>

<% end %>

<%= form_tag("/todos/complete/", :method => "post") do %>

<div class="col-md-12">

	<%= submit_tag("Update", :class=>"btn btn-success", :name=>"complete_todo") %>
	<%= submit_tag("Delete", :class=>"btn btn-danger", :name=>"delete_todo") %>
	

</div> <!-- span12 -->

<hr><br>

<div class="row">

  <div class="col-md-10">

    <div class="row">
	<table class="table table-striped">

		<h4>Today</h4>
		
		<thead>
	
			<tr>
				<th class="col-xs-1">Status</th>
				<th class="col-xs-3">Item</th>
				<th class="col-xs-1">For</th>
				<th class="col-xs-2">Project</th>
				<th class="col-xs-1">Deadline</th>
			</tr>

		</thead>

		<tbody>      

			<% @todo_today.each do |t| %>
				
				<tr>	
					
					<td>
<%= hidden_field_tag "todos_status[:id][]", t.id %>
					
					    <div class="input-group">
					      <span class="input-group-addon">
						<%= check_box_tag "todos_checkbox[]",t.id %>
					      </span>
									      
				<%= text_field_tag "todos_status[:status][]", (((t.todo_status.to_f)*100).to_i).to_s + "%", class: 'form-control' %>
					    </div><!-- /input-group -->
					
 					 </td>
					<td>
					<% if t.todo_complete == true %>
          
						<strike><%= t.todo_item %></strike>

					<% else %>

						<%= link_to t.todo_item, details_path(t.id) %>

					<% end %>
					<% if t.todo_recurring == true %> <p class="text-right"><span class="glyphicon glyphicon-repeat" aria-hidden="true"></span></p><% end %>
					</td>
					<td><%= t.todo_for %></td>
					<td>
						<% if t.todo_project == '' || t.todo_project.nil? %>
						
						<% else %>

							<%= link_to t.todo_project, projectdetails_path(t.todo_project) %>
							<% end %>
						</td>
					<td><%= t.todo_deadline %></td>

				</tr>

			<% end %>

		</tbody>
	</table>

    </div> <!-- row -->

    <div class="row">

	<table class="table table-striped">

		<h4>This Week</h4>
		
		<thead>
	
			<tr>
				<th class="col-xs-1">Status</th>
				<th class="col-xs-3">Item</th>
				<th class="col-xs-1">For</th>
				<th class="col-xs-2">Project</th>
				<th class="col-xs-1">Deadline</th>
			</tr>

		</thead>

		<tbody>      

			<% @todo_week.each do |t| %>
				
				<tr>	
					
					<td>
<%= hidden_field_tag "todos_status[:id][]", t.id %>
					
					    <div class="input-group">
					      <span class="input-group-addon">
						<%= check_box_tag "todos_checkbox[]",t.id %>
					      </span>
									      
				<%= text_field_tag "todos_status[:status][]", (((t.todo_status.to_f)*100).to_i).to_s + "%", class: 'form-control' %>
					    </div><!-- /input-group -->
					
 					 </td>
					<td>
					
					<% if t.todo_complete == true %>
          
						<strike><%= t.todo_item %></strike>

					<% else %>

						<%= link_to t.todo_item, details_path(t.id) %>

					<% end %>
					<% if t.todo_recurring == true %> <p class="text-right"><span class="glyphicon glyphicon-repeat" aria-hidden="true"></span></p><% end %>	
					</td>
					<td><%= t.todo_for %></td>
					<td>
						<% if t.todo_project == '' || t.todo_project.nil? %>
						
						<% else %>

							<%= link_to t.todo_project, projectdetails_path(t.todo_project) %>
							<% end %>
						</td>
					<td><%= t.todo_deadline %></td>

				</tr>

			<% end %>

		</tbody>
	</table>
	
    </div> <!-- row -->

  </div> <!-- col-md-8 -->

  <div class="col-xs-2">

	<table class="table table-striped">


		<h4>Personal</h4>
		
		<% if @todo_personal.count == 0 %>

			<tbody><tr>Nothing to do</tr></tbody>

		<% else %>

			<thead>
	
				<tr>
					<th></th>
					<th>Item</th>

				</tr>

			</thead>

			<tbody>      

				<% @todo_personal.each do |t| %>
			
	
					<tr>	
						<td><%= check_box_tag "todos_checkbox[]",t.id %></td>
						<td>
						<% if t.todo_complete == true %>
          
							<strike><%= t.todo_item %></strike>
	
						<% else %>

							<%= link_to t.todo_item, details_path(t.id) %>

						<% end %>
						</td>

					</tr>

				<% end %>
			
			</tbody>

		<% end %>

	</table>

  </div> <!-- col-md-3 -->

</div> <!-- row --> 

<% end %>

</div> <!-- span12 -->

</div> <!-- row -->

</div> <!-- container -->
