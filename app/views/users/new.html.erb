<title>Shared Todo App</title>

<div class="container">

<div class="row">

<div class="span12">

<h1>Sign Up Here</h1>

<div class="span4">

<div class="well">

<% form_for User.new do |f| %>

<%=f.label :username %> <%=f.text_field :username %>
<%=f.label :email %> <%=f.text_field :email %>
<%=f.label :password %> <%=f.text_field :password %>
<%=f.label :confirm_password %> <%=f.text_field :confirm_password %>
<%=f.submit "Sign Up" %>
<% end %>

</div> <!-- well -->

</div> <!-- span4 -->

</div> <!-- span12 -->

</div> <!-- row -->

</div> <!-- container -->